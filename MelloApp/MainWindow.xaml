<Window x:Class="MelloApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelloApp"
        mc:Ignorable="d"
        Title="Mello" 
        Height="450" Width="800" 
        SizeToContent="WidthAndHeight">
    <StackPanel Background="#000">
        <Image Width="200" Source="bilder/melodifestivalen.png"></Image>
        <Label Foreground="#FFF">Rösta på din favoritlåt</Label>
        <Button Name="röd" Click="ClickRösta" Padding="10" Margin="10" Background="Red" Foreground="#FFF">Röd</Button>
        <Button Name="blå" Click="ClickRösta" Padding="10" Margin="10" Background="Blue" Foreground="#FFF">Blå</Button>  
        <Button Name="grön" Click="ClickRösta" Padding="10" Margin="10" Background="Green" Foreground="#FFF"> Grön</Button>
        <Button Name="gul" Click="ClickRösta" Padding="10" Margin="10" Background="White" Foreground="#FFF">Gul</Button>
        <Label Margin="10" Foreground="#FFF">Antal Röster</Label>
        <TextBox Name="txbResultat" Margin="10" Padding="10"></TextBox>
    </StackPanel>
</Window>
