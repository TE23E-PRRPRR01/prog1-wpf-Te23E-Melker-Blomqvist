<Window x:Class="NamnApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NamnApp"
        mc:Ignorable="d"
        Title="Namn o sånt" Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Background="#EEE">
        <Label FontSize="20" Margin="10">Initialer</Label>

        <StackPanel Orientation="Horizontal">
            <Label Margin="10">Förnamn: </Label>
            <TextBox Name="txbFörnamn" Margin="10" Width="150"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Margin="10">Efternamn: </Label>
            <TextBox Name="txbEfternamn" Margin="10" Width="150"></TextBox>
        </StackPanel>

        <Button Click="KlickKör" Margin="10" Width="150">Kör</Button>
        
        <StackPanel Orientation="Horizontal">
            <Label Margin="10">Resultat: </Label>
            <TextBox Name="txbResultat" Margin="10" Width="150"></TextBox>
        </StackPanel>
    </StackPanel>
</Window>
