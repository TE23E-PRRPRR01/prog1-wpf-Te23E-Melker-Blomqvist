<Window x:Class="epostApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:epostApp"
    mc:Ignorable="d"
    Title="Epostappen" Height="450" Width="800"
    SizeToContent="WidthAndHeight" Background="#EEE">

    <StackPanel Margin="10">
        <Label FontWeight="Bold" FontSize="30">Epostappen</Label>
        <StackPanel
            Orientation="Horizontal">
            <Label Width="120">ange epost:</Label>
            <TextBox Name="tbxEpost" Width="250"></TextBox>
        </StackPanel>
        <StackPanel
            Margin="10" Orientation="Horizontal">
            <Label Width="120">ange meddelande:</Label>
            <TextBox Name="tbxMeddelande" Width="250"
                Height="250"
            Acceptreturn="True" VerticalScrollBarVisibility="True"></TextBox>

        </StackPanel>
        <Button Click="ClickSkicka" Margin="10"
            Padding="10">Skicka</Button>
        <Label Name="lblStatus" Height="30" Background="#FFF"></Label>

    </StackPanel>
</Window>