<Window x:Class="MelkerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MelkerApp"
        mc:Ignorable="d"
        Title="MelkerApp" Height="450" Width="800" SizeToContent="WidthAndHeight">
        <StackPanel Background="#EEE">
            <Label FontSize="20" Margin="10">JämförTal</Label>
    
            <StackPanel Orientation="Horizontal">
                <Label Margin="10">Tal 1: </Label>
                <TextBox Name="txbTal1" Margin="10" Width="150"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Margin="10">Tal 2: </Label>
                <TextBox Name="txbTal2" Margin="10" Width="150"></TextBox>
            </StackPanel>
            
            <Button Click="KlickJämför" Margin="10" Width="50">Jämför</Button>
            
            <StackPanel Orientation="Horizontal">
                <Label Margin="10">Resultat: </Label>
                <TextBox Name="txbResultat" Margin="10" Width="150"></TextBox>
            </StackPanel>
        </StackPanel>
</Window>
