<Window x:Class="BränbollApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BränbollApp"
        mc:Ignorable="d"
        Title="BrännbollApp"
        Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
    <Label FontSize="30">Brännbollsräknaren</Label>
        <StackPanel Orientation="Horizontal">
            <Label>Lag inne:</Label>
            <TextBox Name="txbinne" Width="100"></TextBox>
            <Label>Lag ute:</Label>
            <TextBox Name="txbute" Width="100"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Click="KlickFrivarv" Margin="10" Padding="5" Width="100">Frivarv</Button>
            <Button Click="KlickBränning" Margin="10" Padding="5" Width="100">Bränning</Button>
            <Button Click="KlickLyra" Margin="10" Padding="5" Width="100">Lyra</Button>
            <Button Click="KlickVarv" Margin="10" Padding="5" Width="100">Varv</Button>
        </StackPanel>
        <Label>historik</Label>
        <TextBox Name="txbHistorik" IsReadOnly="True" Width="400"></TextBox>
    </StackPanel>
</Window>
