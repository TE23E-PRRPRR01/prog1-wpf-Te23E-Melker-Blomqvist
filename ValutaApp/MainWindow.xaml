<Window x:Class="ValutaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValutaApp"
        mc:Ignorable="d"
        Title="Valuta Konverterare" Height="450" Width="800" SizeToContent="WidthAndHeight">
        <StackPanel Background="#EEE">
            <Label FontSize="20" Margin="10">ValutaOmvandlare</Label>
    
            <StackPanel Orientation="Horizontal">
                <Label Margin="10">Belopp (SEK): </Label>
                <TextBox Name="txbBelopp" Margin="10" Width="150"></TextBox>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
            <Button Click="USD" Margin="10" Width="50">USD</Button>
            <Button Click="EUR" Margin="10" Width="50">EUR</Button>
            <Button Click="GBP" Margin="10" Width="50">GBP</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Margin="10">Resultat: </Label>
                <TextBox Name="txbResultat" Margin="10" Width="150"></TextBox>
            </StackPanel>
        </StackPanel>
</Window>
